<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:recucler_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bpr10.git.adobeandroiddeveloperchallenge.MainActivity" >

    <Spinner
        android:id="@+id/apps_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#E6E7E8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

    <ListView
        android:id="@+id/app_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/apps_filter"
        android:layout_marginTop="1dp"
        android:divider="@color/divider_color"
        android:dividerHeight="1dp" />

</RelativeLayout>